{
  "name": "eirvana-api",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development tsx server/api-server.ts",
    "build": "esbuild server/api-server.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "build:full": "node scripts/pre-deploy.js && npm run build && node scripts/migrate.js",
    "start": "NODE_ENV=production node dist/api-server.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "db:migrate": "node scripts/migrate.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "docker:build": "docker build -t eirvana-api:latest .",
    "docker:run": "docker run --rm -p 4000:4000 -e NODE_ENV=production eirvana-api:latest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.37.0",
    "@types/nodemailer": "^7.0.3",
    "@types/pg": "^8.15.6",
    "bcryptjs": "^3.0.3",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "memorystore": "^1.6.7",
    "nodemailer": "^7.0.10",
    "openai": "^6.1.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "ws": "^8.18.0",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "20.16.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^2.1.9",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vitest": "^2.1.9"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
