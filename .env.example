# Environment Configuration for Eirvana API
# Copy this to .env and fill in your values

# Application
NODE_ENV=development
PORT=4000

# Client Configuration
CLIENT_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://euser:epassword@localhost:5432/eirvana_db

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# API Security
API_KEY=your-api-key-change-this-in-production-use-a-strong-random-string
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://eirvana.one,https://www.eirvana.one

# Email Configuration (optional for development)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@eirvana.com